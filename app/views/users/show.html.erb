<section id="users">
  <div class="user">
    <div class="avatar">
      avatar
    </div>
    <div class="info">
      <h2><%= @user.name %></h2>
      <span>Number of posts: <%= @user.posts_counter %> </span>
    </div>
  </div>
</section>
<section id="bio">
  <h4>Bio</h4>
  <p>
    <%= @user.bio %>
  </p>
</section>
<section id="recent-posts">
  <% @recent_posts.each_with_index do |post, index| %>
    <div class="post">
      <h4>Post #<%= index + 1 %></h4>
      <p>
        <%= post.title %>
      </p>
    </div>
  <% end %>
  <button class="btn see-posts">See all posts</button>
</section>
