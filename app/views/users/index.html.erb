<section id="users">
  <% @users.each do |user| %>
    <div class="user">
      <div class="avatar">
        avatar
      </div>
      <div class="info">
        <h2><%= user.name %></h2>
        <span>Number of posts: <%= user.posts_counter %> </span>
      </div>
    </div>
  <% end %>
</section>
