<section id="users">
  <%= render "shared/user_details", user: @user %>
</section>
<section id="recent-posts">
  <%@posts.each_with_index do |post, index|%>
    <div class="post">
      <h4><%= link_to "Post ##{index+1}", user_post_path(@user, post)%></h4>
      <p>
        <%= link_to post.title, user_post_path(@user, post) %>
      </p>
    </div>
    <% if post.comments.length.positive? %>
      <div class="comments">
        <% post.comments.each do |comment| %>
          <div class="comment">
            <h4><%= comment.author.name %>:</h4>
            <span class="text"> <%= comment.text %></span>
          </div>
        <% end %>
      </div>
    <%end%>
  <% end %>
  <button class="btn see-posts">Pagination</button>
</section>
