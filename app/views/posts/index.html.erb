<section id="users">
  <div class="user">
    <div class="avatar">
      avatar
    </div>
    <div class="info">
      <h2><%= @user.name %></h2>
      <span>Number of posts: <%= @user.posts_counter %></span>
    </div>
  </div>
</section>
<section id="recent-posts">
  <%@posts.each_with_index do |post, index|%>
    <div class="post">
      <h4><%= link_to "Post #{index+1}", user_post_path(@user, post)%></h4>
      <p>
        <%= link_to post.title, user_post_path(@user, post) %>
      </p>
    </div>
    <% post.comments.each do |comment| %>
      <div class="comments">
        <div class="comment">
          <h4><%= comment.author.name %>:</h4>
          <span> <%= comment.text %></span>
        </div>
      </div>
    <% end %>
  <%end%>
  <button class="btn see-posts">Pagination</button>
</section>
